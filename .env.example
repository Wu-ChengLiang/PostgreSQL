# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_PATH=./mingyi.db
DB_MAX_CONNECTIONS=1
DB_BUSY_TIMEOUT=5000
DB_CACHE_SIZE=2000
DB_PAGE_SIZE=4096
DB_SYNCHRONOUS=NORMAL
DB_JOURNAL_MODE=WAL
DB_TEMP_STORE=MEMORY

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Configuration
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=60

# Process Management
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster
PM2_MAX_MEMORY_RESTART=1G

# Development Settings
DEV_AUTO_RESTART=true
DEV_WATCH=true
DEV_IGNORE_WATCH=node_modules,logs,*.log,.git

# Production Settings
PROD_COMPRESSION=true
PROD_HELMET=true
PROD_TRUST_PROXY=1