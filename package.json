{
  "name": "mingyi-platform",
  "version": "3.0.0",
  "description": "名医堂数据平台3.0 - 专业的中医按摩预约管理系统",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:prod": "NODE_ENV=production pm2 start ecosystem.config.js --env production",
    "start:dev": "pm2 start ecosystem.config.js --env development",
    "stop": "pm2 stop ecosystem.config.js",
    "restart": "pm2 restart ecosystem.config.js",
    "reload": "pm2 reload ecosystem.config.js",
    "logs": "pm2 logs",
    "monitor": "pm2 monit",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:init": "node scripts/init-database.js",
    "db:seed": "node scripts/seed-data.js",
    "db:optimize": "node scripts/optimize-database.js",
    "lint": "eslint src tests",
    "docs": "node scripts/generate-docs.js"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "pm2": "^6.0.8",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "中医",
    "按摩",
    "预约",
    "管理系统",
    "健康"
  ],
  "author": "名医堂技术团队",
  "license": "MIT"
}
